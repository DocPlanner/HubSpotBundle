<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="hubspot.client.class">Fungku\HubSpot\HubSpotService</parameter>
    </parameters>

    <services>
        <service id="hubsport" class="%hubspot.client.class%" factory-class="%hubspot.client.class%" factory-method="make">
            <argument>%hubspot.api_key%</argument>
        </service>
    </services>


</container>
